<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
             <h3>Edit your Listing Here</h3>
             <br/>
     <form action="/listings/update/<%= updateListing.id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data"> 
       <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" id="title" value="<%= updateListing.title %>" class="form-control" required>
        <div class="valid-feedback">
        Title looks good!
    </div>
    <div class="invalid-feedback">
        Please enter your title
    </div>
       </div>
       <div class="mb-3">
                 <label for="description" class="form-label">Description</label>
                 <textarea name="listing[description]" id="description" class="form-control"  required><%= updateListing.description %></textarea>
        <div class="invalid-feedback">
        Please enter a short description
        </div>
        </div>
        <div class="mb-3 row">
            <label for="" class="mb-1"><b>Orignal Listing Image</b></label>
            <img src="<%= originalImageUrl %>" alt="Not found" class="col-4">
        </div> 
        <div class="mb-3">
            <label for="image" class="form-label">Upload new Image</label>
            <input type="file" name="listing[image]" id="image" class="form-control">
        <div class="invalid-feedback">
        Please enter a valid Url
    </div>
        </div> 
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                 <input type="number" name="listing[price]" id="price" class="form-control" value="<%= updateListing.price %>" required>
              <div class="invalid-feedback">
                Please enter a valid price
                </div>
            </div>
            <div class="mb-3 col-md-8">
                 <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" id="country" class="form-control" value="<%= updateListing.country %>" required>
                      <div class="invalid-feedback">
                         Please enter a valid country name
                     </div>
            </div>
        </div>        
        <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" id="location" class="form-control" value="<%= updateListing.location %>" required>
                       <div class="invalid-feedback">
                     Please enter a valid Location 
                           </div>
                </div>
        <button class="btn btn-dark edit-btn mb-3">Edit</button>
    </form>
    </div>
</div> 
