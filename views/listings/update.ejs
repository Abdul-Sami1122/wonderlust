<% layout("/layouts/boilerplate") %>

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12">
      <h3 class="text-center mt-3">Edit Your Listing</h3>
      <hr class="mb-4" />

      <form
        action="/listings/update/<%= updateListing.id %>?_method=PUT"
        method="POST"
        class="needs-validation"
        enctype="multipart/form-data"
        novalidate
      >
        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            id="title"
            value="<%= updateListing.title %>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">Please enter your title.</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            id="description"
            class="form-control"
            rows="3"
            required
          >
<%= updateListing.description %></textarea
          >
          <div class="invalid-feedback">Please enter a short description.</div>
        </div>

        <!-- Original Image -->
        <div class="mb-4">
          <label class="form-label fw-semibold">Original Listing Image</label>
          <div class="">
            <img
              src="<%= originalImageUrl %>"
              alt="Listing Image"
              class="img-fluid rounded shadow-sm mt-2"
              style="max-width: 200px; max-height: 200px"
            />
          </div>
        </div>
        <!-- New Image Upload -->
        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <input
            type="file"
            name="listing[image]"
            id="image"
            class="form-control"
          />
          <div class="invalid-feedback">Please enter a valid image.</div>
        </div>

        <!-- Price & Country -->
        <div class="row g-3">
          <div class="col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              name="listing[price]"
              id="price"
              class="form-control"
              value="<%= updateListing.price %>"
              required
            />
            <div class="invalid-feedback">Please enter a valid price.</div>
          </div>
          <div class="col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              id="country"
              class="form-control"
              value="<%= updateListing.country %>"
              required
            />
            <div class="invalid-feedback">
              Please enter a valid country name.
            </div>
          </div>
        </div>

        <!-- Location -->
        <div class="mt-3 mb-4">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            id="location"
            class="form-control"
            value="<%= updateListing.location %>"
            required
          />
          <div class="invalid-feedback">Please enter a valid location.</div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="btn btn-dark px-5 py-2 edit-btn">
            Update
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
