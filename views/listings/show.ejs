<% layout("/layouts/boilerplate") %>
<script>
    const mapToken =  "<%= process.env.MAP_TOKEN %>";
    const coordinates = "<%-JSON.stringify(Listing.geometry.coordinates)%>";
    const Location = "<%= Listing.location%>";
    const Title = "<%= Listing.title%>";
</script>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h2><%= Listing.title %></h2> 
    </div>
    <div class="card listing-card col-6 offset-3 show-card mt-3">
        <img src="<%= Listing.image.url %>" class="card-img-top show-img" alt="Not Found">
        <div class="card-body mt-4">
                 <p class="card-text">
                    <b>Owner:</b> <i><%= Listing.owner.username %></i>
                    <br/>
                    <br/>
                    <b>Description:</b>  <%= Listing.description %>
                    <br/>
                    <br/>
                    <b>Price:</b> &#8360 <%= Listing.price.toLocaleString("en-IN") %>
                    <br/>
                    <br/>
                    <b>Location:</b>   <%= Listing.location %>
                    <br/>
                    <br/>
                    <b>Country:</b>  <%= Listing.country %>
                 </p>
         </div>
    </div>
    <% if(currentUser && currentUser._id.equals(Listing.owner._id)) { %>
        <div class="btns mb-3">
                <a href="/listings/update/<%= Listing.id %>" class="btn btn-dark col-lg-1 col-md-2 offset-3 edit-btn">Edit</a>
                <br/>
                <form action="/listings/delete/<%= Listing.id %>?_method=DELETE" method="POST">
                   <button class="btn btn-outline-dark offset-4">Delete</button>
                </form>
        </div>
    <% } %> 
    <!-- Div for review Form -->

     <div class="col-8 offset-3 mb-3">
       <div>
        <% if(currentUser) { %>
         <hr/>
         
              <h4>Leave your review here</h4>
               <form action="/listings/<%= Listing.id %>/reviews" method="POST" class="needs-validation" novalidate>   
                 <div class="mb-3 mt-3">
                   <label for="rating" class="form-label">Rating:</label>
                   <fieldset class="starability-slot">
                             <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                             <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                             <label for="first-rate1" title="Terrible">1 star</label>
                             <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                             <label for="first-rate2" title="Not good">2 stars</label>
                             <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                             <label for="first-rate3" title="Average">3 stars</label>
                             <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                             <label for="first-rate4" title="Very good">4 stars</label>
                             <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                             <label for="first-rate5" title="Amazing">5 stars</label>
                   </fieldset>
                </div>
                <div class="mb-3 mt-3">
                      <label for="comment" class="form-label">Comment:</label>
                      <textarea name="review[comment]" class="form-control" id="comment" rows="5" cols="30" placeholder="Type your comment here" required></textarea>
                    <div class="invalid-feedback">
                          Please submit some comments for review
                    </div>
                </div>
                      <button type="submit" class="btn btn-outline-dark">Submit</button>
                </form>
          <% } %>        
        </div>
        <!-- To show reviews -->
        <hr/>
        <% if(Listing.reviews.length >0) {%>
        <div class="row">
            <h4>All Reviews</h4>
            <% for (review of Listing.reviews) {%>
                <div class="card col-lg-5 col-md-12 mb-3 ms-3 ">
                <div class="card-body offset-1">
                    <h5 class="card-title mt-3"><i>@<%= review.author.username %></i></h5>
                    <p class="starability-result" data-rating="<%= review.rating %>"></p>
                    <p class="card-text"><%= review.comment %></p>
                </div>
                <br>
                <div class="row">
                    <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                    <div class="col-lg-4 col-md-8 offset-1">
                        <form action="/listings/<%= Listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3 mt-3" method="POST">
                             <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                    </div>
                    <% } %>
                </div>
               </div>
            <% } %>
        </div>
        <hr/>
        <% } %>
      </div>
      <div class="col-8 offset-3 mb-3">
        <h3>Where you'll be</h3>
           <div id="map"></div>
      </div>
</div>

<script src="/js/map.js"></script>


