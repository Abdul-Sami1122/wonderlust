<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const coordinates = "<%- JSON.stringify(Listing.geometry.coordinates) %>";
  const Location = "<%= Listing.location %>";
  const Title = "<%= Listing.title %>";
</script>

<div class="container my-4">
  <!-- Title -->
  <div class="row">
    <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 text-center mb-3">
      <h2 class="fw-bold"><%= Listing.title %></h2>
    </div>
  </div>

  <!-- Listing Card -->
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <div class="card listing-card shadow-sm rounded-4">
        <img
          src="<%= Listing.image.url %>"
          class="card-img-top show-img rounded-top-4"
          alt="Not Found"
        />
        <div class="card-body mt-3">
          <p class="card-text fs-6">
            <b>Owner:</b> <i><%= Listing.owner.username %></i><br /><br />
            <b>Description:</b> <%= Listing.description %><br /><br />
            <b>Price:</b> &#8360; <%= Listing.price.toLocaleString("en-IN")
            %><br /><br />
            <b>Location:</b> <%= Listing.location %><br /><br />
            <b>Country:</b> <%= Listing.country %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Edit/Delete Buttons -->
  <% if (currentUser && currentUser._id.equals(Listing.owner._id)) { %>
  <div class="row justify-content-center mt-3">
    <div class="col-lg-6 col-md-8 col-sm-10 d-flex justify-content-between">
      <a
        href="/listings/update/<%= Listing.id %>"
        class="btn btn-dark w-50 me-2"
        >Edit</a
      >
      <form
        action="/listings/delete/<%= Listing.id %>?_method=DELETE"
        method="POST"
        class="w-50"
      >
        <button class="btn btn-outline-dark w-100">Delete</button>
      </form>
    </div>
  </div>
  <% } %>

  <!-- Review Form -->
  <div class="row justify-content-center mt-5">
    <div class="col-lg-8 col-md-10 col-sm-11">
      <% if (currentUser) { %>
      <hr />
      <h4 class="mb-3">Leave your review here</h4>
      <form
        action="/listings/<%= Listing.id %>/reviews"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="rating" class="form-label fw-semibold">Rating:</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3">
          <label for="comment" class="form-label fw-semibold">Comment:</label>
          <textarea
            name="review[comment]"
            class="form-control"
            id="comment"
            rows="4"
            placeholder="Type your comment here"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please submit some comments for review.
          </div>
        </div>

        <button type="submit" class="btn btn-outline-dark">Submit</button>
      </form>
      <% } %>
    </div>
  </div>

  <!-- Reviews Section -->
  <% if (Listing.reviews.length > 0) { %>
  <div class="row justify-content-center mt-5">
    <div class="col-lg-8 col-md-10 col-sm-11">
      <hr />
      <h4 class="mb-3">All Reviews</h4>

      <div class="row gy-3 gx-3">
        <% for (review of Listing.reviews) { %>
        <!-- Removed .ms-3 that caused overflow -->
        <div class="col-md-6 col-sm-12">
          <div class="card shadow-sm h-100">
            <div class="card-body ms-3 mt-2 mb-2">
              <h5 class="card-title">@<%= review.author.username %></h5>
              <p
                class="starability-result"
                data-rating="<%= review.rating %>"
              ></p>
              <p class="card-text"><%= review.comment %></p>
              <% if (currentUser && currentUser._id.equals(review.author._id)) {
              %>
              <form
                action="/listings/<%= Listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                method="POST"
              >
                <button class="btn btn-sm btn-outline-dark mt-2">Delete</button>
              </form>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <% } %>

  <!-- Map Section -->
  <div class="row justify-content-center mt-5">
    <div class="col-lg-8 col-md-10 col-sm-11">
      <h3 class="mb-3">Where you'll be</h3>
      <div id="map"></div>
    </div>
  </div>
</div>

<script src="/js/map.js"></script>
