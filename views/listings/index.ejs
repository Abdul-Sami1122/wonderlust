<% layout("/layouts/boilerplate") %>
<% if (typeof message !== 'undefined' && message) { %>
  <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
    <%= message %>
    <button
      type="button"
      class="btn-close btn-close-black"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
<% } %>


<!-- Filters on page -->
 <div id="filters" class="d-flex flex-nowrap overflow-auto p-2">
    <a href="/listings/trending">
        <div class="filter flex-shrink-0 me-2">
        <div>
            <i class="fa-solid fa-fire"></i>
        </div>
        <p>Trending</p>
    </div>
    </a>
    <a href="/listings/rooms">
        <div class="filter flex-shrink-0 me-2">
        <div>
            <i class="fa-solid fa-bed"></i>
        </div>
        <p>Rooms</p>
    </div>
     </a>
     <a href="/listings/iconic_cities">
    <div class="filter flex-shrink-0 me-2">
        <div>
            <i class="fa-solid fa-mountain-city"></i>
        </div>
        <p>Iconic Cities</p>
    </div>
    </a>
    <a href="/listings/mountain">
    <div class="filter flex-shrink-0 me-2">
        <div>
            <i class="fa-solid fa-mountain"></i>
        </div>
        <p>Mountain</p>
    </div>
    </a>
    <a href="/listings/castels">
    <div class="filter flex-shrink-0 me-2">
        <div>
            <i class="fa-brands fa-fort-awesome"></i>
        </div>
        <p>Castels</p>
    </div>
    </a>
    <a href="/listings/amazing_pools">
    <div class="filter flex-shrink-0 me-2">
        <div>
            <i class="fa-solid fa-person-swimming"></i>
        </div>
        <p>Amazing Pools</p>
    </div>
    </a>
    <a href="/listings/camping">
    <div class="filter flex-shrink-0 me-2">
        <div>
            <i class="fa-solid fa-tree"></i>
        </div>
        <p>Camping</p>
    </div>
    </a>
    <a href="/listings/farms">
    <div class="filter flex-shrink-0 me-2">
        <div>
            <i class="fa-solid fa-cow"></i>
        </div>
        <p>Farms</p>
    </div>
    </a>
    <a href="/listings/arctic">
    <div class="filter flex-shrink-0 me-2">
        <div>
           <i class="fa-solid fa-snowflake"></i>
        </div>
       <p>Arctic</p>
    </div>
    </a>
</div>
<!-- Taxes Switch settings -->
<div class="tx-toggle">
        <div class="form-check-reverse form-switch">
             <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
             <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
         </div>
</div>
   
   
    <!-- All listings Details -->
     <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) {%>
    <a href="/listings/<%= listing.id %>" class="listing-link">
    <div class="card listing-card col">
    <img src="<%= listing.image.url %>" class="card-img-top card-images" alt="Listing Image" style="height: 20rem;">
    <!-- <div class="card-img-overlay"></div> -->
    <div class="card-body">
    <p class="card-text"><b><%= listing.title%></b>
    <br/>
    &#8360 <%= listing.price.toLocaleString("en-IN") %> /night
    <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
    </p> 
    </div>
    </div>
    </a>
<% } %> 
     </div>




    