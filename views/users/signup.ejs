<% layout("/layouts/boilerplate") %>
<h1
  class="col-lg-6 col-md-8 col-sm-10 offset-lg-3 offset-md-2 offset-sm-1 mt-4 mb-2 text-lg-center text-md-start"
>
  Signup on Wonder Lust
</h1>

<div class="row">
  <div
    class="col-lg-6 col-md-8 col-sm-10 offset-lg-3 offset-md-2 offset-sm-1 mb-5"
  >
    <form
      action="/signup"
      method="POST"
      class="needs-validation p-3 p-md-4 p-lg-5"
      novalidate
    >
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          placeholder="Enter a username"
          required
        />
        <div class="valid-feedback">username is registered</div>
        <div class="invalid-feedback">username already exists</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          placeholder="Enter your email address"
          required
        />
        <div class="valid-feedback">email is registered</div>
        <div class="invalid-feedback">email is not valid</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          placeholder="Enter your password here"
          required
        />
      </div>

      <button class="btn btn-success w-100 mt-3 mb-3">Sign Up</button>
    </form>
    <div
      class="col-lg-6 col-md-8 col-sm-10 offset-lg-3 offset-md-2 offset-sm-1"
    >
      <a
        href="/auth/google"
        class="btn btn-danger py-2 d-flex align-items-center justify-content-center gap-2 mt-3"
      >
        <i class="fab fa-google fs-5"></i>
        <span>Continue with Google</span>
      </a>
    </div>
  </div>
</div>
