<% layout("/layouts/boilerplate") %>
<h1 class="col-lg-6 col-md-8 offset-3 mt-3 mb-3">Signup on Wonder Lust</h1>

<div class="row">
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" name="username" id="username" class="form-control" placeholder="Enter a username" required>
                  <div class="valid-feedback">
                         username is registered
                  </div>
                  <div class="invalid-feedback">
                        username is already exists
                  </div>
            </div>
            <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email address" required>
                  <div class="valid-feedback">
                         emial is registered
                  </div>
                  <div class="invalid-feedback">
                        email is not valid 
                  </div>
            </div>
            <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password here" required>
            </div>
            <button class="btn btn-success mb-4">SignUp</button>
        </form>
    </div>
</div>