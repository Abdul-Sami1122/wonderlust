<% layout("/layouts/boilerplate") %>
<h1 class="col-lg-6 col-md-8 offset-3 mt-3 mb-3">Login on Wonder Lust</h1>

<div class="row">
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" name="username" id="username" class="form-control" placeholder="Enter a username" required>
                  <div class="valid-feedback">
                         username is registered
                  </div>
                  <div class="invalid-feedback">
                        username is ot registered
                  </div>
            </div>
            <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password here" required>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>

